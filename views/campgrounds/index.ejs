<% include ../partials/header  %>
<div class="container">
        <header class ="jumbotron">
            <div class= "container">
                <h1>Welcome to yelpCamp!</h1>
                <p>View our hand picked campgrounds from around the world</p>
                <div class="text-center">
                <a href = "/campgrounds/new" class= "btn btn-primary btn-large">Add new camp ground</a>
                </div>
             </div>
        </header>
        
        
       <div class= "row text-center" style= "display:flex; flex-wrap: wrap;">
                <% campgrounds.forEach(function(campgrounds){ %>
                <div class = "col-md-3 col-sm-6">
                    <div class= "thumbnail">
                        <img src= "<%= campgrounds.Image %>">
                        <div class="caption">
                            <h4><%= campgrounds.Name%></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campgrounds._id %>" class= "btn btn-primary"> More Info</a>
                        </p>
                    </div>
                   
                </div>
                  
           <% }); %>
       </div>
        
         
        
</div>
<% include ../partials/footer %>